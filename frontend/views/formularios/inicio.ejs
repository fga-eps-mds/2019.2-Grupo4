<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="stylesheet" href="/listagem_formulario/listForms.css">
	<script src="https://kit.fontawesome.com/4b0fcedc6f.js" crossorigin="anonymous"></script>
	<title>QuestMark</title>
</head>
<%- include ../partials/Header.ejs%>
<% if (formulario.length>0) { %>

<body>
	<br>
	<div class="wrapping">
		<% for(let i = 0;i < formulario.length;i++){ %>
		<div class="formBox">
			<div class="formText"><%= formulario[i].nome%></div>
			<div class="buttonsBox">
				<a href="/forms/listar_respostas/<%= formulario[i].id %>">
					<div class="buttonEdit">
						<i class="fa fa-pencil" style="font-size:20px; color:white; margin-top: 15px;"></i>
					</div>
				</a>
				<a href="/forms/postar/<%= formulario[i].id %>">
					<div class="buttonShare">
						<i class="fas fa-share-alt" style="font-size:20px; color:white; margin-top: 15px"></i>
					</div>
				</a>
				<a href="#">
					<div class="buttonsGraphs">
						<i class="fas fa-chart-bar" style="font-size:20px; color:white; margin-top: 15px"></i>
					</div>
				</a>
				<a href="/forms/delete/<%= formulario[i].id %>">
					<div class="buttonTrash">
						<i class="fas fa-trash" style="font-size:20px; color:white; margin-top: 15px"></i>
					</div>
				</a>
			</div>
			<!-- <div class="card-footer text-muted">
				Data de Criação: <%=formulario[i].data%>
			</div> -->
		</div>
		<% } %>
		<a href="/forms/registro" class="newFormButton">+</a>
	</div>
	<% }else{ %>
	<div class="nothingHere">
		<div class="nothingHereText">Nenhum Formulário Foi Cadastrado</div>
		<a href="/forms/registro" class="newFormButton">+</a>
	</div>
	<% } %>
</body>

</html>
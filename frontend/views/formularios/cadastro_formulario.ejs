<!DOCTYPE HTML>
<html>

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Registro</title>
	<link rel="stylesheet" href="/cadastro_formulario/style/novoformulario.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
		integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script src="https://kit.fontawesome.com/4b0fcedc6f.js" crossorigin="anonymous"></script>	
	<script src="https://code.jquery.com/jquery-3.3.1.min.js"
		integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
	<script src="/wmd/wmd.js"></script>
	<script src="/wmd/showdown.js"></script>
</head>
<%- include ../partials/Header.ejs%>
<body>
	<div id="div-erros" style="display: none; height: 45px; margin: 10px 0px 20px 0px">
		<div class="col-md-12">
			<div id="div-lista-erros" class="alert alert-danger">
				<strong>Atenção!</strong>
				<ul id="lista-erros">
				</ul>
			</div>
		</div>
	</div>
	<div style="display: flex; justify-content: center;">
		<div class="pageTitle">Registrando Novo Questionário</div>
	</div>

	<div class="backGround">
		<form id="form_registro" method="POST" action="/forms/registro/salvar">
			<div>
				<div style="display: flex; justify-content: center;">
					<input type="text" id="name_quest" name="name_quest" placeholder="Nome do questionário"
						class="textBoxName">
				</div>
				<div class="pageDimension">
					<div style="display: flex; flex-direction: column;">
						<label for="copy_marskdown" class="textTitles">Conteúdo</label>
						<textarea id="notes" name="copy_markdown" placeholder=" Markdown" class="textBox"></textarea>
					</div>
					<div style="display: flex; flex-direction: column;">
						<label class="textTitles">Preview</label>
						<div class="textBox" id="notes-preview" style="margin-left: 2vw"></div>
					</div>
					<textarea hidden="hidden" type="text" id="copy_html" name="copy_html"></textarea>
				</div>
			</div>
			<div style="float: right; margin-top: 15px">
				<button type="submit" onclick="window.location.href='/forms'" class="buttonCancel">
					<i class="fas fa-times" style="color: white"></i>
				</button>
				<button type="submit" class="buttonAgree">
					<i class="fas fa-check" style="color: white"></i>
				</button>
			</div>
		</form>
	</div>

	<script type="text/javascript">
		new WMDEditor({
			input: "notes",
			button_bar: "notes-button-bar",
			preview: "notes-preview",
			output: "copy_html",
			buttons: "bold italic link  ol ul  heading",
			modifierKeys: false,
			autoFormatting: false
		});
	</script>

	<!-- Script de submissão do questionário -->
	<script src="/cadastro_formulario/javascript/functions_submission.js"></script>

</body>

</html>